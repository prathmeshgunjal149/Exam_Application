<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Register â€“ Exam App</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/register.css">
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar">
    <div class="logo">Shiv<span>.Exam</span></div>
    <div class="nav-links">
      <a href="/">Home</a>
      <a href="/login">Login</a>
      <a href="/register">Sign Up</a>
      <a href="/about">About</a>
      <a href="/Contact">About</a>
    </div>
  </nav>

  <!-- Register Box -->
  <div class="register-wrapper">
    <div class="register-box">

      <h1>Welcome to Exam App</h1>
      <p>Register an account or sign up for a free trial</p>

      <!-- Role Buttons -->
      <div class="role-buttons">
       
        <a href="/register">Student Register</a>
        <a href="/adminRegister">Admin Register</a>
      </div>

      <!-- Step Indicator -->
      <div class="steps">
        <div class="step active">1 <span>Account</span></div>
        <div class="step">2 <span>Details</span></div>
      </div>

      <!-- Registration Form -->
      <form action="/register" method="POST">

        <div class="form-section">
          <label for="fullname">Full Name</label>
          <input type="text" id="fullname" name="fullname" required>
        </div>

        <div class="form-section">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required>
        </div>

        <div class="form-section">
          <label for="contact">Contact</label>
          <input type="text" id="contact" name="contact" required>
        </div>

        <div class="form-section">
          <label for="username">Username</label>
          <input type="text" id="username" name="username" required>
        </div>

        <div class="form-section">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" required>
        </div>

        <button type="submit">Register</button>

        <div class="extra">
          Already have an account? <a href="/login">Login</a>
        </div>
      </form>

    </div>
  </div>

</body>
</html>
