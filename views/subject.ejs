<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Subjects - Exam Application System</title>
  <link rel="stylesheet" href="/css/subject.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>

  <!-- Header -->
  <div class="header">
    Welcome to the Exam Application System
  </div>

  <div class="container">
    <!-- Sidebar -->
    <div class="sidebar">
      <h3>Admin</h3>
      <a href="/admin"><i class="fas fa-home"></i> Dashboard</a>
      <a href="/subject"><i class="fas fa-book"></i> Subject</a>
      <a href="/exam"><i class="fas fa-pen"></i> Exam</a>
      <a href="/question"><i class="fas fa-question-circle"></i> Questions</a>
      <a href="/schedule"><i class="fas fa-calendar-alt"></i> Schedule</a>
      <a href="/contact"><i class="fas fa-envelope"></i> Contact Us</a>
    </div>

    <!-- Main Content -->
    <div class="main">
      <div class="cards">

        <!-- Existing Courses Card -->
        <div class="card">
          <h2><i class="fas fa-list"></i> Existing Courses</h2>
          <table>
            <thead>
              <tr>
                <th>Course ID</th>
                <th>Name</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (subjects && subjects.length > 0) { %>
                <% subjects.forEach(subject => { %>
                  <tr>
                    <td><%= subject.cid %></td>
                    <td><%= subject.cname %></td>
                    <td>
                      <form method="POST" action="/subject/delete/<%= subject.cid %>">
                        <button class="delete-btn">Delete</button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="3">No courses found</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Add New Course Card -->
        <div class="card right">
          <h2><i class="fas fa-plus-circle"></i> Add New Course</h2>
          <form action="/subject" method="POST">
            <div class="form-group">
              <label for="cname">Course Name</label>
              <input type="text" id="cname" name="cname" placeholder="Enter course name" required />
            </div>
            <button type="submit">Add Course</button>
          </form>
        </div>
        
      </div>
    </div>
  </div>

</body>
</html>
